{

  "manifest_version": 2,
  "name": "pure",
  "version": "1.0",

  "description": "only allow same origin scripts",

  "icons": {
    "48": "icons/pure-48.png",
    "96": "icons/pure-96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["pure.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icons/pure-32.png",
    "default_title": "Beastify",
    "default_popup": "popup/pure.html"
  },

  "applications": {
    "gecko": {
      "id": "pure@pure.surge.sh"
    }
  }

}